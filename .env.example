# Linear API key (required) - get from https://linear.app/settings/api
LINEAR_API_KEY=lin_api_your_key_here

# Discord webhook URL (required)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Server mode: set to "server" for HTTP mode, leave empty for one-shot
MODE=

# Server port (optional, only used in server mode)
PORT=8080
